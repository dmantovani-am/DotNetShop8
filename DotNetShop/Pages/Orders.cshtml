@model DotNetShop.Pages.OrdersModel
@{
}

<form role="form" method="post" >
    <section data-bs-version="5.1" class="form6 cid-tsFfsp7eqK" id="form6-n">
        <div class="container">
            <div class="mt-5">
                <!-- Checkout Panel Information-->
                <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-4">
                    <h3 class="fs-5 fw-bolder m-0 lh-1">Shipping Address</h3>
                </div>
                <div class="row">
                    <!-- First Name-->
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="Order.FirstName" for="firstNameBilling" class="form-label">First name</label>
                            <input asp-for="Order.FirstName" type="text" class="form-control" id="firstNameBilling" placeholder="" value="" required="">
                        </div>
                    </div>

                    <!-- Last Name-->
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="Order.LastName" class="form-label">Last name</label>
                            <input asp-for="Order.LastName" type="text" class="form-control" id="lastNameBilling" placeholder="" value="" required="">
                        </div>
                    </div>

                    <!-- Email-->
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="Order.Email" class="form-label">Email</label>
                            <input asp-for="Order.Email" type="email" class="form-control" id="email" placeholder="">
                        </div>
                    </div>
                    <!-- Email-->
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="Order.Phone" class="form-label">Phone</label>
                            <input asp-for="Order.Phone" type="tel" class="form-control" id="phone" placeholder="">
                        </div>
                    </div>
                    <!-- Address-->
                    <div class="col-12">
                        <div class="form-group">
                            <label asp-for="Order.Address" class="form-label">Address</label>
                            <input asp-for="Order.Address" type="text" class="form-control" id="address" placeholder="123 Some Street Somewhere"></input>
                        </div>
                    </div>
                    <!-- Address-->
                </div>

                <div class="col-auto mbr-section-btn align-center">
                    <button type="submit" class="btn btn-primary display-4">Place Order</button>
                </div>

            </div>
        </div>
    </section>
</form>