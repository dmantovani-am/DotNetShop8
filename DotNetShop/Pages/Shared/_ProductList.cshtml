@model IEnumerable<Product>
@{
}

@foreach (var p in Model ?? Enumerable.Empty<Product>())
{
    <div class="item features-image сol-12 col-md-6 col-lg-4">
        <div class="item-wrapper">
            <div class="item-img">
                <a asp-page="Product" asp-route-id="@p.Id">
                    <img src="/images/@p.Image" alt="Coffee Shop" title="">
                </a>
            </div>
            <div class="item-content">
                <a asp-page="Product" asp-route-id="@p.Id">
                    <h6 class="item-subtitle mbr-fonts-style mt-1 display-7"><strong>@p.Title</strong></h6>
                    <p class="mbr-text mbr-fonts-style mt-3 display-7">@p.Price $</p>
                </a>
            </div>
            <div class="mbr-section-btn item-footer mt-2">
                <a class="btn item-btn btn-primary display-4" target="_self" asp-page="Cart" asp-page-handler="Add" asp-route-id="@p.Id">
                    <span class="mbrib-cart-add mbr-iconfont mbr-iconfont-btn"></span>Add to cart
                </a>
            </div>
        </div>
    </div>
}